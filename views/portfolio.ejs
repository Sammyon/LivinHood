<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List Portfolio</title>
</head>

<body>
  <h1>LIST PORTFOLIO</h1>
  <table border="1">
    <thead>
      <tr>
        <th>Amount</th>
        <th>Investment Type</th>
        <th>Price Bought</th>
        <th>Stock Code</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(e => { %>
        <% if (e.amount > 0) { %>
          <tr>
            <td><%= e.amount %></td>
            <td><%= e.investmentType %></td>
            <td><%= e.priceBought %></td>
            <td><a href="/companies/<%= e.Stock.id %>"></a><%= e.Stock.stockCode %></td>
            <td>
              <a href="/stocks/<%= e.Stock.id %>/buy">Buy</a>
              <a href="/stocks/<%= e.Stock.id %>/sell">Sell</a>
            </td>
          </tr>
        <% } %>
      <% }) %>
    </tbody>
  </table>
</body>
</html>